#!/bin/bash
# chezmoi:template:left-delimiter="# {{" right-delimiter="}}"

set -e

# {{ $pm := "unknown" }}
# {{ if hasKey . "package_manager" }}# {{ $pm = .package_manager }}# {{ end }}

# shellcheck disable=SC2154
# $pm is set by chezmoi template
echo "Installing packages for # {{ $pm }}..."

# Install JetBrains Mono Nerd Font from GitHub releases
install_jetbrains_mono_nerd_font() {
    local font_dir="${HOME}/.local/share/fonts"
    mkdir -p "${font_dir}"
    if [ ! -f "${font_dir}/JetBrainsMonoNerdFont-Regular.ttf" ]; then
        echo "Installing JetBrains Mono Nerd Font..."
        curl -fsSL -o /tmp/JetBrainsMono.zip "https://github.com/ryanoasis/nerd-fonts/releases/latest/download/JetBrainsMono.zip"
        unzip -o /tmp/JetBrainsMono.zip -d "${font_dir}"
        rm /tmp/JetBrainsMono.zip
        fc-cache -fv
    fi
}

# {{ if eq $pm "apk" }}
sudo apk update
sudo apk add \
    py3-dnspython \
    font-jetbrains-mono-nerd \
    fontconfig \
    bash-completion \
    curl

# {{ else if eq $pm "apt" }}
sudo apt update
sudo apt install -y \
    python3-dnspython \
    fontconfig \
    bash-completion \
    curl \
    unzip

# Install JetBrains Mono Nerd Font manually (not in apt repos)
install_jetbrains_mono_nerd_font

# {{ else if eq $pm "dnf" }}
sudo dnf install -y \
    python3-dns \
    fontconfig \
    bash-completion \
    curl \
    unzip

# Install JetBrains Mono Nerd Font manually
install_jetbrains_mono_nerd_font

# {{ else if eq $pm "pacman" }}
sudo pacman -Syu --noconfirm \
    python-dnspython \
    ttf-jetbrains-mono-nerd \
    fontconfig \
    bash-completion \
    curl

# {{ else if eq $pm "zypper" }}
sudo zypper install -y \
    python3-dnspython \
    fontconfig \
    bash-completion \
    curl \
    unzip

# Install JetBrains Mono Nerd Font manually
install_jetbrains_mono_nerd_font

# {{ else if eq $pm "brew" }}
brew install \
    python3 \
    fontconfig

brew tap homebrew/cask-fonts
brew install --cask font-jetbrains-mono-nerd-font

# {{ end }}
