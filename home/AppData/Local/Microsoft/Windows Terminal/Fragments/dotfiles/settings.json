{
  "$schema": "https://aka.ms/terminal-profiles-schema",
  "profiles": {
    "defaults": {
      "font": {
        "face": "JetBrainsMono Nerd Font",
        "size": 13
      },
      "colorScheme": "StarshipTheme",
      "cursorShape": "bar",
      "useAcrylic": true,
      "opacity": 80,
      "backgroundImageOpacity": 0.4,
      "padding": "8, 8, 8, 8",
      "historySize": 10000,
      "scrollbarState": "visible",
      "snapOnInput": true,
      "suppressApplicationTitle": true,
      "closeOnExit": "graceful",
      "startingDirectory": "%USERPROFILE%"
    }
  },
  "schemes": [
    {
      "name": "StarshipTheme",
      "background": "#0C0C0C",
      "foreground": "#CCCCCC",
      "cursorColor": "#FF9400",
      "selectionBackground": "#FFFFFF",
      "black": "#0C0C0C",
      "red": "#C50F1F",
      "green": "#98C379",
      "yellow": "#FF9400",
      "blue": "#0370C0",
      "purple": "#881798",
      "cyan": "#3A96DD",
      "white": "#CCCCCC",
      "brightBlack": "#767676",
      "brightRed": "#E74856",
      "brightGreen": "#16C60C",
      "brightYellow": "#F9F1A5",
      "brightBlue": "#3B78FF",
      "brightPurple": "#B4009E",
      "brightCyan": "#61D6D6",
      "brightWhite": "#F2F2F2"
    }
  ],
  "actions": [
    {
      "command": {
        "action": "copy",
        "singleLine": false
      },
      "keys": "ctrl+shift+c"
    },
    {
      "command": "paste",
      "keys": "ctrl+shift+v"
    },
    {
      "command": "find",
      "keys": "ctrl+shift+f"
    },
    {
      "command": {
        "action": "newTab"
      },
      "keys": "ctrl+shift+t"
    },
    {
      "command": {
        "action": "closeTab"
      },
      "keys": "ctrl+shift+w"
    },
    {
      "command": {
        "action": "newWindow"
      },
      "keys": "ctrl+shift+n"
    },
    {
      "command": {
        "action": "duplicateTab"
      },
      "keys": "ctrl+shift+d"
    },
    {
      "command": {
        "action": "splitPane",
        "split": "right"
      },
      "keys": "ctrl+shift+right"
    },
    {
      "command": {
        "action": "splitPane",
        "split": "down"
      },
      "keys": "ctrl+shift+down"
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "left"
      },
      "keys": "alt+left"
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "right"
      },
      "keys": "alt+right"
    }
  ],
  "copyFormatting": "none",
  "copyOnSelect": false,
  "useAcrylicInTabRow": true,
  "windowingBehavior": "useExisting"
}
