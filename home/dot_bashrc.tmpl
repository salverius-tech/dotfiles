# ~/.bashrc: executed by bash(1) for non-login shells.

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# Add ~/bin and ~/.local/bin to PATH (for chezmoi, starship, etc.)
if [ -d "$HOME/bin" ] && [[ ":$PATH:" != *":$HOME/bin:"* ]]; then
    export PATH="$HOME/bin:$PATH"
fi
if [ -d "$HOME/.local/bin" ] && [[ ":$PATH:" != *":$HOME/.local/bin:"* ]]; then
    export PATH="$HOME/.local/bin:$PATH"
fi

# History settings
HISTCONTROL=ignoreboth
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000
shopt -s checkwinsize

# Lesspipe
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# Chroot identification
if [ -z "${debian_chroot:-}" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# Color prompt setup
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

if [ -n "$force_color_prompt" ]; then
    if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
        color_prompt=yes
    else
        color_prompt=
    fi
fi

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt force_color_prompt

case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
esac

# Color support
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Default ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Alert alias
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# Load shared aliases
if [ -f ~/.shell_aliases ]; then
    . ~/.shell_aliases
fi

# Load bash-specific aliases
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Bash completion
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Distro icon detection for Starship
_set_distro_icon() {
    local icon=""
    if [ -f /etc/os-release ]; then
        local distro_id=$(grep "^ID=" /etc/os-release | cut -d= -f2 | tr -d '"')
        case "$distro_id" in
            kali)       icon="ï´£";;
            arch)       icon="";;
            debian)     icon="";;
            raspbian)   icon="";;
            ubuntu)     icon="";;
            elementary) icon="";;
            fedora)     icon="";;
            coreos)     icon="";;
            gentoo)     icon="";;
            mageia)     icon="";;
            centos)     icon="";;
            opensuse*|tumbleweed) icon="";;
            sabayon)    icon="";;
            slackware)  icon="";;
            linuxmint)  icon="";;
            alpine)     icon="";;
            aosc)       icon="";;
            nixos)      icon="";;
            devuan)     icon="";;
            manjaro)    icon="";;
            rhel)       icon="";;
            *)          icon="";;
        esac
    fi
    echo "$icon"
}

# Starship configuration
export STARSHIP_DISTRO="$(_set_distro_icon) "
export STARSHIP_CONFIG=~/.config/starship.toml
if command -v starship &> /dev/null; then
    eval "$(starship init bash)"
fi

# SSH Agent
if command -v ssh-agent &> /dev/null; then
    eval $(ssh-agent) > /dev/null 2>&1
fi
